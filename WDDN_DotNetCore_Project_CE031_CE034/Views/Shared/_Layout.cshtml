<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | ClothDonationApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="text-white px-3 navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClothDonationApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse collapse navbar-collapse justify-content-between">
                    <div class="navbar-nav">
                        <a class="nav-item text-white nav-link active mr-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item text-white nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </div>

                    <div class="navbar-nav">
                        @if (signInManager.IsSignedIn(User))
                        {

                            <form method="post" asp-controller="Account" asp-action="logout">
                                <button type="submit" style="width:auto; border: 0px; border-radius: 5px" class="nav-item text-white nav-link bg-danger logout">
                                    Logout @User.Identity.Name

                                </button>
                            </form>

                        }
                        else
                        {
                            <a class="nav-item text-white nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            <a class="nav-item text-white nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- ------ footer ------- -->
    <footer class="container-fluid bg-dark mt-5 login-footer border-top footer text-muted">
        <div class="text-white text-center">
            Copyright ©2021 | All rights reserved by  <span class="text-white-50">
                <i>
                    <a href="#" ID="FooterButton" class="text-white-50" runat="server" PostBackUrl="~/Home.aspx">Salvation Foundation</a>
                </i>
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
