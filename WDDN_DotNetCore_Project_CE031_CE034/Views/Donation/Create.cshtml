@model ClothDonationApp.Models.Donation.Donation

@{
    ViewData["Title"] = "Donation";
}

@*<h1>View</h1>

    <h4>Donation</h4>*@
<h2 class="py-3  text-sm-center"><i>Make a Donation</i></h2>

<hr />
<div class="row">
    <div class="container-fluid col-md-6 px-5 ">
        @*<h2 class="py-3  text-sm-center"><i>Make a Donation</i></h2>*@
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="DonarName" class="control-label"></label>
                <input asp-for="DonarName" class="form-control" placeholder="Enter Donar Name" />
                <span asp-validation-for="DonarName" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input asp-for="MobileNumber" class="form-control" placeholder="Enter Donor's Mobile Number" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" asp-items="ViewBag.Size" class="form-control"></select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" asp-items="ViewBag.CityId" class="form-control"></select>
            </div>

            <div class="text-center form-group">
                <input type="submit" value="Create" class="form-control btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="DonarHome" asp-controller="Home" class="btn btn-dark">Back</a>
        </div>

    </div>
</div>



